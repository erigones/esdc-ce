#!/bin/bash

(sysinfo -f)
echo "||||"
(imgadm sources -j)
echo "||||"
(diskinfo -Hp)
echo "||||"
(zpool list -Hp -o name,size)
echo "||||"
(zfs list -Hp -o name,used,available -d 0)
echo "||||"
(zpool status)
echo "||||"
(cat /usbkey/config)
echo "||||"
(cat /root/.ssh/id_rsa.pub)
echo "||||"
if [[ -n "$1" ]]; then
	# shellcheck disable=SC2162
	(imgadm list -H -o uuid,zpool | while read uuid zpool; do imgadm get -P "${zpool}" "${uuid}"; done | json -g)
else
	echo '[]'
fi
echo "||||"
(nictagadm list -p -d'|')

exit 0
