#!/bin/bash

MAINDIR="$(cd "$(dirname "$0")/.." || exit 64; pwd -P)"
ERIGONES_HOME=${ERIGONES_HOME:-"${MAINDIR}"}
export ERIGONES_HOME
ENVS="${ERIGONES_HOME}/envs"
PATH="${ERIGONES_HOME}/bin:/opt/local/bin:/opt/local/sbin:${ENVS}/bin:${PATH}"
export PATH

APP="que.erigonesd:cq"
NODENAME=$(hostname)

if [ -d "${ENVS}" ]; then
	# shellcheck disable=SC1090
	. "${ENVS}/bin/activate"
else
	# shellcheck disable=SC1090
	. "${ERIGONES_HOME}/envs/bin/activate"
fi

PYTHONPATH="${ERIGONES_HOME}:${ERIGONES_HOME}/bin:${ERIGONES_HOME}/envs/lib/python3.7/site-packages:${ERIGONES_HOME}/envs/lib/python3.6/site-packages:${PYTHONPATH}"
export PYTHONPATH
DJANGO_SETTINGS_MODULE="core.settings"
export DJANGO_SETTINGS_MODULE
C_FORCE_ROOT="True"
export C_FORCE_ROOT
#TZ="Europe/Bratislava"
#export TZ

if [ -z "${1}" ]; then
	echo "Usage: ${0} {fast|slow|backup|mgmt} {worker|multi|beat|status} [celeryd options]"
	exit 1
fi

QTYPE="${1}"
shift
if [ "${QTYPE}" == "mgmt" ]; then
	QUEUE="mgmt"
else
	QUEUE="${QTYPE}.${NODENAME}"
	unset DJANGO_SETTINGS_MODULE
fi

CMD="${1}"
case "${CMD}" in
	"beat")
		QTYPE="beat"
		# shellcheck disable=SC2124
		OPTS="${@} -A ${APP}"
	;;
	"worker"|"multi")
		# shellcheck disable=SC2124
		OPTS="${@} -A ${APP} -Q ${QUEUE}"
	;;
	*)
		# shellcheck disable=SC2124
		OPTS="${@}"
esac

if [ -f "${ERIGONES_HOME}/bin/erigonesd.exe" ]; then
	EXEC="${ERIGONES_HOME}/bin/erigonesd.exe"
else
	EXEC="${ERIGONES_HOME}/que/erigonesd.py"
fi

cd "${ERIGONES_HOME}" || exit 64
# shellcheck disable=SC2086
exec "${EXEC}" ${OPTS}
